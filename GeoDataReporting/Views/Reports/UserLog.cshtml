@model IEnumerable<GeoDataReporting.Models.UserLog>
@{
    ViewBag.Title = "User Logs";
    //var fromDate = DateTime.Now.AddDays(-180);
}

<div class="row">
    <div class="col-sm-10">
        <h3 class="text-muted">User Log</h3>
    </div>
</div>
@using (Html.BeginForm("UserLog", "Reports", FormMethod.Get))
{
<div class="row">
    <div class="col-sm-3">
        <label>Company</label>
        @Html.DropDownList("CompanyId", null, "All", new { @class = "form-control" })
    </div>
    <div class="col-sm-3">
        <br />
        <div class="checkbox">
            <label>@Html.CheckBox("IncludeDemo", new { @class = "input-lg" }) Include Demo Company/User</label>
        </div>
    </div>
</div>
}

<div class="row">
    <div class="col-sm-12 table-responsive">
        <table class="table" id="datatable">
            <thead>
                <tr>
                    <th>Company</th>
                    <th>CompanyNo</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>UserId</th>
                    <th>UserName </th>
                    <th>Password </th>
                    <th>RepId</th>
                    <th>UserType</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Suprevisor</th>
                    <th>Layout_No</th>
                    <th>Print_Format</th>
                    <th>LicenseKey</th>
                    <th>AppVersion</th>
                    <th>IsActive</th>
                    <th>CreatedOn</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr title="Id @item.UserId@(item.IsActive?"":", User is inactive.")" class="@(item.IsActive?"":"inactive")">
                        <td>@item.CompanyName</td>
                        <td>@item.CompanyCode</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.UserId</td>
                        <td>@item.UserName</td>
                        <td>@item.Password</td>
                        <td>@item.Rep_Id</td>
                        <td>@item.UserAppVersion</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td>@(item.IsSupervisor == true ? "Yes" : "No")</td>
                        <td>@item.Layout_no</td>
                        <td>@item.Print_Format</td>
                        <td>@item.LicenseKey</td>
                        <td>@item.AppVersion</td>
                        <td>@(item.IsActive ? "Yes" : "Block")</td>
                        <td>@item.CreatedOn.Value.ToString("yyyy/MM/dd hh:mm:ss")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section scripts
{
    <script>
        $(function () {
            $("#datatable").DataTable({
                "lengthMenu": [100],
                'aaSorting': []
            });
            $('#CompanyId, #IncludeDemo').change(function () {
                document.forms[0].submit();
            })
        });
    </script>
    <style>
        .inactive {
            color: red;
        }
    </style>
}
